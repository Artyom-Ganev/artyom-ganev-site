{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "actions": ["src/actions"],
      "assets": ["src/assets"],
      "assets/*": ["src/assets/*"],
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "container": ["src/container"],
      "const": ["src/const"],
      "interface": ["src/interface"],
      "interface/*": ["src/interface/*"],
      "model": ["src/model"],
      "pages": ["src/pages"],
      "reducers": ["src/reducers"],
      "store": ["src/store"],
      "utils": ["src/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "info",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": [
    "src"
  ]
}
